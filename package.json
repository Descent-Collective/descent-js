{
  "name": "descent-js",
  "version": "0.1.0",
  "description": "A Typescript library for interacting with the Descent Protocol",
  "keywords": [
    "xNGN",
    "Web3",
    "Lending",
    "SDK"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Descent-Collective/descent-js"
  },
  "license": "MIT",
  "author": "Njoku Emmanuel",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/descent-js.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsdx build",
    "format": "prettier --write .",
    "prepare": "tsdx build",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "tsdx test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "dependencies": {
    "ethers": "^6.7.1",
    "ganache": "^7.9.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^9.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "dotenv": "^16.3.1",
    "fs": "^0.0.1-security",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "rollup": "^3.29.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "size-limit": "^9.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/descent-js.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/descent-js.esm.js",
      "limit": "10 KB"
    }
  ]
}
