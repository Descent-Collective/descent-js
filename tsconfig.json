{
  // see https://www.typescriptlang.org/tsconfig to better understand tsconfigs
  "include": ["src", "types"],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "lib": [],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "exclude": ["node_modules"]
}
